<%include ./partials/header.ejs%>

<div class="w-full h-screen bg-center bg-cover bg-zinc-300 flex items-center justify-center">
  <div class="w-[80vw] md:w-[25vw] bg-white px-20 py-10 rounded-[30px]">
    <h1 class="text-2xl  mb-10 text-center font-semibold text-zinc-700 tracking-tighter capitalize leading-none">Welcome to VisualVerse</h1>
    <form action="/login" method="post">
      <input class="border-2 rounded-md block  mt-2  w-full px-3 py-2" type="text" name="username" placeholder="username">
      <input class="border-2 rounded-md block  mt-2  w-full px-3 py-2" type="password" name="password" placeholder="password">
      <a class="mt-2 font-semibold text-zinc-700 inline-block" href="#">Forgot the password?</a>      
      <input class="block  mt-2  w-full px-3 py-2 bg-red-600 text-white rounded-md" type="submit" value="Login">
      <a class="inline-block mt-7 text-sm font-semibold text-zinc-700 text-center w-full" href="/register">Dont have an account?</a>
    </form>
  </div>
</div>

